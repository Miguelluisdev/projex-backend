generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// depois dar o migrate

enum Status {
  Accept
  Pending
  Refused
}

enum PermissionType {
   READ
   WRITE
   ADMIN
   OWNER
}

enum NotificationType {
  TASK_ASSIGNED      
  TASK_COMPLETED    
  PROJECT_CREATED  
  PROJECT_UPDATED   
  USER_INVITED       
  COMMENT_ADDED     
  DEADLINE_APPROACH  
  STATUS_CHANGED  
  GENERAL          
}

model UserMain {
  uuid        String    @id @default(uuid()) 
  auth_id     String    @db.VarChar(255) @unique
  email       String    @unique
  password    String    @db.VarChar(255)
  created_at  DateTime  @default(now()) @db.Timestamp
  updated_at  DateTime  @updatedAt  @db.Timestamp
  deleted_at  DateTime? 
  projects    Project[] 
  tasks       Tasks[]
  notifications Notification[]
  user_type     UserType[] 
  permission Permission[] 
}

model Project {
  uuid         String    @id @default(uuid()) 
  title        String    @db.VarChar(50) @unique
  type_project String    @db.VarChar(255)
  description  String    @db.Text
  start_date   DateTime
  end_date     DateTime
  creator_id   String    
  created_at   DateTime   @default(now()) @db.Timestamp
  updated_at   DateTime   @default(now()) @db.Timestamp
  creator      UserMain  @relation(fields: [creator_id], references: [uuid]) 
  tasks        Tasks[]
  notifications Notification[]
  permission Permission[] 
}

model Tasks {
  uuid         String    @id @default(uuid()) 
  project_id   String   
  title        String    @db.VarChar(255)
  description  String    @db.Text
  assigned_to  String?   
  assignee     UserMain? @relation(fields: [assigned_to], references: [uuid])
  status       Status
  start_date   DateTime     @db.Timestamp
  due_date     DateTime?     @db.Timestamp
  created_at   DateTime  @default(now())  @db.Timestamp()  
  updated_at   DateTime  @updatedAt       @db.Timestamp()    
  completed_at DateTime? @db.Timestamp()         
  project      Project   @relation(fields: [project_id], references: [uuid])
  notifications Notification[]
}

model Notification {
  uuid          String          @id @default(uuid()) 
  type          NotificationType 
  email         String          @db.VarChar(255)              
  message       String                             
  user_id       String?                   
  user          UserMain?       @relation(fields: [user_id], references: [uuid])
  project_id    String?                  
  project       Project?        @relation(fields: [project_id], references: [uuid]) 
  task_id       String?                 
  task          Tasks?          @relation(fields: [task_id], references: [uuid])
  read_at       DateTime?           @default(now()) @db.Timestamp                 
  created_at    DateTime         @default(now()) @db.Timestamp  
}

model UserType {
  uuid          String          @id @default(uuid())
  user_id       String 
  user          UserMain    @relation(fields: [user_id], references: [uuid])
  email         String          @db.VarChar(255)   
  position      String @db.VarChar(255)    
  created_at    DateTime    @default(now()) @db.Timestamp
  updated_at    DateTime    @updatedAt @db.Timestamp 
}

model Permission {
  uuid  String @id @default(uuid())
  user_id String
  project_id String
  user          UserMain        @relation(fields: [user_id], references: [uuid]) 
  project       Project?        @relation(fields: [project_id], references: [uuid])
  permission_type PermissionType 
  granted_by    String         
  grantedAt     DateTime        @default(now()) @db.Timestamp
}